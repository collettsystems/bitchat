<Window
    x:Class="WinUIExample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIExample"
    Title="BitChat" Height="450" Width="600">
    <TabView x:Name="RootTabs">
        <TabViewItem Header="Public">
            <StackPanel Margin="20" Spacing="10">
                <TextBlock x:Name="ConnectionState"/>
                <ListView x:Name="Messages" Height="300"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox x:Name="MessageBox" Width="400"/>
                    <Button Content="Send" Click="OnSend"/>
                </StackPanel>
            </StackPanel>
        </TabViewItem>
        <TabViewItem Header="Channels">
            <StackPanel Margin="20" Spacing="10">
                <ComboBox x:Name="ChannelList" Width="200" SelectionChanged="OnChannelSelected"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox x:Name="JoinChannelBox" Width="200"/>
                    <Button Content="Join" Click="OnJoinChannel"/>
                </StackPanel>
                <ListView x:Name="ChannelMessages" Height="240"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox x:Name="ChannelMessageBox" Width="400"/>
                    <Button Content="Send" Click="OnSendChannelMessage"/>
                </StackPanel>
            </StackPanel>
        </TabViewItem>
        <TabViewItem Header="Private">
            <StackPanel Margin="20" Spacing="10">
                <ComboBox x:Name="PeerList" Width="200" SelectionChanged="OnPeerSelected"/>
                <ListView x:Name="PrivateMessages" Height="240"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox x:Name="PrivateMessageBox" Width="400"/>
                    <Button Content="Send" Click="OnSendPrivateMessage"/>
                </StackPanel>
            </StackPanel>
        </TabViewItem>
        <TabViewItem Header="Settings">
            <StackPanel Margin="20" Spacing="10">
                <TextBlock Text="Nickname"/>
                <TextBox x:Name="NicknameBox" Width="200"/>
                <Button Content="Save" Click="OnSaveNickname"/>
            </StackPanel>
        </TabViewItem>
    </TabView>
</Window>
